&HEAD CHID='soot_test' /

&MESH IJK=50,50,50, XB=0,1,0,1,0,1/

&TIME T_END=1/
&DUMP NFRAMES=400 DT_PL3D=8.0, DT_SL3D=0.01 /

&MISC STRATIFICATION=F/

REM rho_s = x/(x/A + (1-x)/B )
REM solve for x
REM  x = (rho_s*A/ ( A*B - (B-A)*rho_s))
REM  x = mass fraction
REM  A = 0.454
REM  B = 1.196

REM  0.5 = exp(-mass_extinct*rho_s*dx)
REM  mass_extinct=8700
REM  dx=0.5

REM  rho_s = -LN(0.5)/(mass_extinc*dx) = 1.59344*10^-4
REM      x = 1.3326*10^-4

&SPEC ID='SOOT', MASS_FRACTION_0=0.00013326/
&INIT XB=0.3,0.7,0.3,0.7,0.3,0.7  TEMPERATURE=1000.0 /

&OBST XB=0.3,0.7,0.3,0.7,0.0,0.3 /

&SLCF PBY=0.5, QUANTITY='MASS FRACTION', SPEC_ID='SOOT', CELL_CENTERED=T/
&SLCF PBY=0.5, QUANTITY='DENSITY', SPEC_ID='SOOT', CELL_CENTERED=T/
&SLCF XB=0.0,1.0,0.0,1.0,0.0,1.0, QUANTITY='TEMPERATURE',CELL_CENTERED=.TRUE.  / 3D slice
&SLCF XB=0.0,1.0,0.0,1.0,0.0,1.0, QUANTITY='DENSITY',SPEC_ID='SOOT',CELL_CENTERED=.TRUE.  / 3D slice

